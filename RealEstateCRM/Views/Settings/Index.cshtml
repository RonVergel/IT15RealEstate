@model RealEstateCRM.Models.AgencySettings
@{
    ViewData["Title"] = "Agency Settings";
}

<div class="max-w-3xl space-y-6 md:ml-6">
    <div>
        <h1 class="text-2xl font-bold text-gray-900">Agency Settings</h1>
        <p class="text-gray-600">Configure commission shares for closed deals.</p>
    </div>

    @if (TempData["SuccessMessage"] != null)
    {
        <div class="p-3 rounded border border-green-200 bg-green-50 text-green-700">@TempData["SuccessMessage"]</div>
    }
    @if (TempData["ErrorMessage"] != null)
    {
        <div class="p-3 rounded border border-red-200 bg-red-50 text-red-700">@TempData["ErrorMessage"]</div>
    }

    <form asp-controller="Settings" asp-action="Save" method="post" class="space-y-5">
        @Html.AntiForgeryToken()

        <div>
            <label class="block text-sm font-medium text-gray-700">Broker Commission (%)</label>
            <input type="number" name="brokerPercent" step="0.01" min="0" max="100"
                   value="@Model?.BrokerCommissionPercent"
                   class="mt-1 w-full max-w-xs border rounded px-3 py-2" />
            <p class="text-xs text-gray-500 mt-1">Default: 10%</p>
        </div>

        <div>
            <label class="block text-sm font-medium text-gray-700">Agent Commission (%)</label>
            <input type="number" name="agentPercent" step="0.01" min="0" max="100"
                   value="@Model?.AgentCommissionPercent"
                   class="mt-1 w-full max-w-xs border rounded px-3 py-2" />
            <p class="text-xs text-gray-500 mt-1">Default: 5%</p>
        </div>

        <div class="pt-2 flex gap-2">
            <button type="submit" class="px-4 py-2 bg-blue-600 text-white rounded">Save Settings</button>
            <a href="/Dashboard" class="px-4 py-2 border rounded">Back to Dashboard</a>
        </div>
    </form>

    <div class="text-xs text-gray-500">Last updated: @(Model?.UpdatedAtUtc.ToLocalTime().ToString("MMM dd, yyyy HH:mm"))</div>

    <div class="mt-8 p-4 bg-emerald-50 border border-emerald-200 rounded">
        <div class="font-semibold text-emerald-800">Monthly Revenue Goal</div>
        <p class="text-sm text-emerald-700 mt-1">Set your agency's monthly revenue goal (commissions). Brokers will be notified when the goal is achieved and near month-end if the goal has not been met.</p>
        <form asp-controller="Settings" asp-action="SaveGoal" method="post" class="mt-3 flex flex-wrap items-end gap-3">
            @Html.AntiForgeryToken()
            <div>
                <label class="block text-sm font-medium text-gray-700">Goal (₱)</label>
                <input type="number" step="0.01" min="0" name="monthlyGoal" value="@Model?.MonthlyRevenueGoal" class="mt-1 w-48 border rounded px-3 py-2" />
            </div>
            <button type="submit" class="px-4 py-2 bg-emerald-600 text-white rounded">Save Goal</button>
        </form>
        <div class="text-xs text-gray-600 mt-2">Notifications sent (this month):
            Achieved: @(Model?.LastNotifiedAchievedPeriod) • Behind: @(Model?.LastNotifiedBehindPeriod)
        </div>
    </div>

    <div class="mt-8 p-4 bg-amber-50 border border-amber-200 rounded">
        <div class="font-semibold text-amber-800">Default Deadline Offsets</div>
        <p class="text-sm text-amber-700 mt-1">These defaults are applied when a deal moves to Under Contract or an offer is accepted.</p>
        <form asp-controller="Settings" asp-action="SaveDeadlinesConfig" method="post" class="mt-3 grid grid-cols-1 sm:grid-cols-2 gap-4">
            @Html.AntiForgeryToken()
            <div>
                <label class="block text-sm font-medium text-gray-700">Inspection (days)</label>
                <input type="number" min="1" name="inspection" value="@Model?.InspectionDays" class="mt-1 w-40 border rounded px-3 py-2" />
            </div>
            <div>
                <label class="block text-sm font-medium text-gray-700">Appraisal (days)</label>
                <input type="number" min="1" name="appraisal" value="@Model?.AppraisalDays" class="mt-1 w-40 border rounded px-3 py-2" />
            </div>
            <div>
                <label class="block text-sm font-medium text-gray-700">Loan Commitment (days)</label>
                <input type="number" min="1" name="loan" value="@Model?.LoanCommitmentDays" class="mt-1 w-40 border rounded px-3 py-2" />
            </div>
            <div>
                <label class="block text-sm font-medium text-gray-700">Closing (days)</label>
                <input type="number" min="1" name="closing" value="@Model?.ClosingDays" class="mt-1 w-40 border rounded px-3 py-2" />
            </div>
            <div class="sm:col-span-2">
                <button type="submit" class="px-4 py-2 bg-amber-600 text-white rounded">Save Defaults</button>
            </div>
        </form>
    </div>

    <div class="mt-8 p-4 bg-indigo-50 border border-indigo-200 rounded">
        <div class="font-semibold text-indigo-800">Agent Assignment Limits</div>
        <p class="text-sm text-indigo-700 mt-1">Set how many properties an agent may actively handle and how many declines are allowed per month.</p>
        <form asp-controller="Settings" asp-action="SaveAssignmentLimits" method="post" class="mt-3 grid grid-cols-1 sm:grid-cols-2 gap-4">
            @Html.AntiForgeryToken()
            <div>
                <label class="block text-sm font-medium text-gray-700">Max Active Assignments per Agent</label>
                <input type="number" min="0" name="maxActive" value="@Model?.MaxActiveAssignmentsPerAgent" class="mt-1 w-40 border rounded px-3 py-2" />
            </div>
            <div>
                <label class="block text-sm font-medium text-gray-700">Max Declines per Agent (per month)</label>
                <input type="number" min="0" name="maxDeclines" value="@Model?.MaxDeclinesPerAgentPerMonth" class="mt-1 w-40 border rounded px-3 py-2" />
            </div>
            <div class="sm:col-span-2">
                <button type="submit" class="px-4 py-2 bg-indigo-600 text-white rounded">Save Limits</button>
            </div>
        </form>
    </div>
</div>
