<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - RealEstateCRM</title>
    <link rel="stylesheet" href="~/css/output.css" asp-append-version="true" />
    @await RenderSectionAsync("Styles", required: false)
</head>
<body class="bg-gray-100 flex flex-col min-h-screen">
    <div class="flex min-h-screen">
        <!-- Sidebar -->
        <aside style="width: 248px;" class="bg-white border-r border-gray-200 flex flex-col py-8">
            <!-- Logo at top-left -->
            <div class="px-4">
                <img src="~/assets/images/Homey_transparent.png"
                     alt="Homey Logo"
                     style="width: 101px; height: 101px;"
                     class="object-contain self-start mb-6" />
            </div>

            @{
                var currentController = ViewContext.RouteData.Values["controller"]?.ToString();
                Func<string, string> getNavLinkClass = (controller) =>
                {
                    var baseClasses = "font-medium px-4 py-3"; // Increased vertical padding from py-2 to py-3
                    if (string.Equals(currentController, controller, StringComparison.OrdinalIgnoreCase))
                    {
                        // Active state: light blue background, blue text, and a right border highlight
                        return $"py-3 bg-blue-50 text-blue-600 font-semibold border-r-4 border-blue-600 {baseClasses}";
                    }
                    // Inactive state
                    return $"text-gray-700 hover:text-blue-600 hover:bg-gray-50 rounded-md {baseClasses}";
                };
            }

            <!-- Nav -->
            <nav class="flex flex-col gap-6 mt-6">
                <a class="@getNavLinkClass("Dashboard")" asp-controller="Dashboard" asp-action="Index">Dashboard</a>
                <a class="@getNavLinkClass("Properties")" asp-controller="Properties" asp-action="Index">Properties</a>
                <a class="@getNavLinkClass("Deals")" asp-controller="Deals" asp-action="Index">Deals</a>
                <a class="@getNavLinkClass("Contacts")" asp-controller="Contacts" asp-action="Index">Contacts</a>
                <a class="@getNavLinkClass("Leads")" asp-controller="Leads" asp-action="Index">Leads</a>
                
                
            </nav>
        </aside>

        <!-- Main Content -->
        <div class="flex-1 flex flex-col">
            <!-- Top Bar -->
            <header class="w-full bg-white border-b border-gray-200 px-6 py-3 flex items-center justify-between">
                <!-- Search -->
                <div class="flex-1 max-w-lg">
                    <input type="text"
                           placeholder="Search Properties, Leads, and more"
                           class="w-full px-4 py-2 border rounded-lg text-sm focus:outline-none focus:ring-2 focus:ring-blue-400" />
                </div>

                <!-- User Dropdown -->
                <div class="flex items-center gap-4 ml-6">
                    <partial name="_LoginPartial" />
                </div>
            </header>

            <!-- Page Body -->
            <main class="flex-1 px-8 py-6 bg-gray-50">
                @RenderBody()
            </main>
        </div>
    </div>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
