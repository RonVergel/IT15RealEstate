            {
                @foreach (var deal in dealsByStatus["New"])
                {
                    <div class="bg-white p-3 rounded-md shadow-sm border border-gray-200 cursor-grab active:cursor-grabbing"
                         data-deal-id="@deal.Id">
                        @if (deal.Property != null)
