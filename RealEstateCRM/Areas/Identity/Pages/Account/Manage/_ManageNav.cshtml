@using RealEstateCRM.Models
@inject SignInManager<ApplicationUser> SignInManager
@{
    var hasExternalLogins = (await SignInManager.GetExternalAuthenticationSchemesAsync()).Any();
    Func<string, string> cls = active => active == "active"
        ? "block px-3 py-2 rounded-md bg-blue-50 text-blue-600 font-semibold border-l-4 border-blue-600"
        : "block px-3 py-2 rounded-md text-gray-700 hover:bg-gray-50";
}
<nav class="space-y-1">
    <a class="@cls(ManageNavPages.IndexNavClass(ViewContext))" id="profile" asp-page="./Index">Profile</a>
    <a class="@cls(ManageNavPages.EmailNavClass(ViewContext))" id="email" asp-page="./Email">Email</a>
    <a class="@cls(ManageNavPages.ChangePasswordNavClass(ViewContext))" id="change-password" asp-page="./ChangePassword">Password</a>
    @if (hasExternalLogins)
    {
        <a id="external-login" class="@cls(ManageNavPages.ExternalLoginsNavClass(ViewContext))" asp-page="./ExternalLogins">External logins</a>
    }
    <a class="@cls(ManageNavPages.TwoFactorAuthenticationNavClass(ViewContext))" id="two-factor" asp-page="./TwoFactorAuthentication">Two-factor authentication</a>
    <a class="@cls(ManageNavPages.PersonalDataNavClass(ViewContext))" id="personal-data" asp-page="./PersonalData">Personal data</a>
</nav>

