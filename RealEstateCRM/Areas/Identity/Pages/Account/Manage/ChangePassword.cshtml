@page
@model ChangePasswordModel
@{
    ViewData["Title"] = "Change password";
    ViewData["ActivePage"] = ManageNavPages.ChangePassword;
}

<section class="bg-white border border-gray-200 rounded-lg p-6">
    <h1 class="text-xl font-semibold text-gray-900 mb-4">Change password</h1>
    <partial name="_StatusMessage" for="StatusMessage" />
    <form id="change-password-form" method="post" class="space-y-4 max-w-xl">
        <div asp-validation-summary="ModelOnly" class="text-red-600 text-sm" role="alert"></div>
        <div>
            <label asp-for="Input.OldPassword" class="block text-sm text-gray-600 mb-1"></label>
            <input asp-for="Input.OldPassword" autocomplete="current-password" aria-required="true"
                   class="w-full px-3 py-2 border border-gray-300 rounded-lg text-sm focus:outline-none focus:ring-2 focus:ring-blue-400" />
            <span asp-validation-for="Input.OldPassword" class="text-red-600 text-xs"></span>
        </div>
        <div>
            <label asp-for="Input.NewPassword" class="block text-sm text-gray-600 mb-1"></label>
            <input asp-for="Input.NewPassword" autocomplete="new-password" aria-required="true"
                   class="w-full px-3 py-2 border border-gray-300 rounded-lg text-sm focus:outline-none focus:ring-2 focus:ring-blue-400" />
            <span asp-validation-for="Input.NewPassword" class="text-red-600 text-xs"></span>
        </div>
        <div>
            <label asp-for="Input.ConfirmPassword" class="block text-sm text-gray-600 mb-1"></label>
            <input asp-for="Input.ConfirmPassword" autocomplete="new-password" aria-required="true"
                   class="w-full px-3 py-2 border border-gray-300 rounded-lg text-sm focus:outline-none focus:ring-2 focus:ring-blue-400" />
            <span asp-validation-for="Input.ConfirmPassword" class="text-red-600 text-xs"></span>
        </div>
        <div class="pt-2">
            <button type="submit" class="px-4 py-2 bg-blue-600 text-white rounded-lg hover:bg-blue-700">Update password</button>
        </div>
    </form>
</section>

@section Scripts { <partial name="_ValidationScriptsPartial" /> }
