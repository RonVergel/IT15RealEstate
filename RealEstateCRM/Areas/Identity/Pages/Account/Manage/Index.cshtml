@page
@model RealEstateCRM.Areas.Identity.Pages.Account.Manage.IndexModel
@{
    ViewData["Title"] = "Profile";
}

<section>
        <div class="bg-white border border-gray-200 rounded-lg p-6">
            <h1 class="text-xl font-semibold text-gray-900 mb-4">Profile</h1>
            <form method="post" class="space-y-4">
                <div asp-validation-summary="ModelOnly" class="text-red-600 text-sm"></div>
                <div>
                    <label class="block text-sm text-gray-600 mb-1">Username</label>
                    <input value="@Model.Username" readonly class="w-full px-3 py-2 border border-gray-300 rounded-lg bg-gray-100 text-sm" />
                </div>
                <div>
                    <label asp-for="Input.FullName" class="block text-sm text-gray-600 mb-1">Full name</label>
                    <input asp-for="Input.FullName" class="w-full px-3 py-2 border border-gray-300 rounded-lg text-sm focus:outline-none focus:ring-2 focus:ring-blue-400" />
                    <span asp-validation-for="Input.FullName" class="text-red-600 text-xs"></span>
                </div>
                <div>
                    <label asp-for="Input.PhoneNumber" class="block text-sm text-gray-600 mb-1">Phone number</label>
                    <input asp-for="Input.PhoneNumber" class="w-full px-3 py-2 border border-gray-300 rounded-lg text-sm focus:outline-none focus:ring-2 focus:ring-blue-400" />
                    <span asp-validation-for="Input.PhoneNumber" class="text-red-600 text-xs"></span>
                </div>
                <div class="pt-2">
                    <button type="submit" class="px-4 py-2 bg-blue-600 text-white rounded-lg hover:bg-blue-700">Save</button>
                </div>
            </form>

            @if (!string.IsNullOrEmpty(Model.StatusMessage))
            {
                <div class="mt-4 text-sm text-blue-800 bg-blue-50 border border-blue-200 rounded-md px-3 py-2">@Model.StatusMessage</div>
            }
        </div>
</section>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
