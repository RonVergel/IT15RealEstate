@page
@model RealEstateCRM.Areas.Identity.Pages.Account.Manage.EmailModel
@{
    ViewData["Title"] = "Email";
    ViewData["ActivePage"] = ManageNavPages.Email;
}

<section class="bg-white border border-gray-200 rounded-lg p-6">
    <h1 class="text-xl font-semibold text-gray-900 mb-4">Manage Email</h1>

    <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
        <div>
            <label class="block text-sm text-gray-600 mb-1">Current email</label>
            <input value="@Model.Email" readonly class="w-full px-3 py-2 border border-gray-300 rounded-lg bg-gray-100 text-sm" />
        </div>
        <div>
            <label class="block text-sm text-gray-600 mb-1">New email</label>
            <form method="post" asp-page-handler="ChangeEmail" class="space-y-2">
                <div>
                    <input asp-for="Input.NewEmail" class="w-full px-3 py-2 border border-gray-300 rounded-lg text-sm focus:outline-none focus:ring-2 focus:ring-blue-400" />
                    <span asp-validation-for="Input.NewEmail" class="text-red-600 text-xs"></span>
                </div>
                <button type="submit" class="px-4 py-2 bg-blue-600 text-white rounded-lg hover:bg-blue-700">Change email</button>
            </form>
        </div>
    </div>

    @if (!string.IsNullOrEmpty(Model.StatusMessage))
    {
        <div class="mt-4 text-sm text-blue-800 bg-blue-50 border border-blue-200 rounded-md px-3 py-2">@Model.StatusMessage</div>
    }
</section>

@section Scripts { <partial name="_ValidationScriptsPartial" /> }

