@page
@model ConfirmEmailModel
@{
    ViewData["Title"] = "Email confirmed";
    Layout = "/Views/Shared/_AuthLayout.cshtml";
}

<div class="min-h-screen flex items-center justify-center px-4">
    <div class="w-full max-w-lg text-center bg-white p-8 md:p-12 rounded-3xl shadow-lg">

        <!-- Success Icon -->
        <div class="mx-auto flex items-center justify-center h-16 w-16 rounded-full bg-blue-100">
            <svg class="h-10 w-10 text-blue-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z" />
            </svg>
        </div>

        <h1 class="text-3xl md:text-[28px] font-semibold text-neutral-900 mt-6">
            @ViewData["Title"]
        </h1>

        <p class="text-neutral-600 mt-4">
            Thank you for confirming your email. You can now log in to your account.
        </p>

        <div class="mt-8">
            <a asp-page="./Login" class="w-full h-12 inline-flex items-center justify-center rounded-full bg-neutral-900 text-white font-medium hover:bg-neutral-800 transition px-8">
                Go to Login
            </a>
        </div>
    </div>
</div>
