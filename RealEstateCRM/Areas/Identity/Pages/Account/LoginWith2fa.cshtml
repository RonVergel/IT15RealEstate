@page
@model RealEstateCRM.Areas.Identity.Pages.Account.LoginWith2faModel
@{
    Layout = "/Views/Shared/_AuthLayout.cshtml";
    ViewData["Title"] = "Two-factor verification";
    var devCode = Model.Dev2FACode;
}

<div class="min-h-screen flex items-center justify-center px-4">
    <div class="w-full max-w-4xl grid grid-cols-1 md:grid-cols-2 rounded-3xl overflow-hidden shadow-lg bg-white">
        <!-- Illustration -->
        <div class="bg-[#e9eeb] hidden md:flex items-center justify-center p-8">
            <img src="~/assets/images/Homey_transparent.png" asp-append-version="true" alt="Homey" class="w-full max-w-md h-auto object-contain" />
        </div>

        <!-- 2FA Panel -->
        <div class="bg-white p-8 md:p-12">
            <h1 class="text-2xl md:text-3xl font-semibold text-neutral-900 text-center">Two‑Factor Verification</h1>

            @if (Model.UseAuthenticator && !Model.UseEmail)
            {
                <p class="text-center text-sm text-neutral-500 mt-2">
                    Enter the code from your authenticator app (Google Authenticator, Microsoft Authenticator, etc.).
                </p>
            }
            else if (!Model.UseAuthenticator && Model.UseEmail)
            {
                <p class="text-center text-sm text-neutral-500 mt-2">
                    Enter the security code we sent to your email.
                </p>
            }
            else
            {
                <p class="text-center text-sm text-neutral-500 mt-2">
                    Enter the verification code from your authenticator app or from the email we sent.
                </p>
            }

            @if (!string.IsNullOrEmpty(Model.InfoMessage))
            {
                <div class="mt-6 px-4 py-2 rounded bg-blue-50 text-blue-700 text-sm border border-blue-200">
                    @Model.InfoMessage
                </div>
            }
            @if (!string.IsNullOrEmpty(Model.ErrorMessage))
            {
                <div class="mt-6 px-4 py-2 rounded bg-red-50 text-red-700 text-sm border border-red-200">
                    @Model.ErrorMessage
                </div>
            }

            @* DEV ONLY helper (removed automatically if Dev2FACode not set) *@
            @if (!string.IsNullOrEmpty(devCode))
            {
                <div class="mt-4 px-4 py-2 rounded bg-yellow-50 text-yellow-800 text-xs border border-yellow-300">
                    Dev Test Code: <strong>@devCode</strong> (remove TwoFactor:ShowDevCode to hide)
                </div>
            }

            <form method="post" class="mt-8 space-y-6">
                @Html.AntiForgeryToken()
                <div asp-validation-summary="ModelOnly" class="text-red-600 text-sm" role="alert"></div>

                <input type="hidden" asp-for="ReturnUrl" />
                <input type="hidden" asp-for="RememberMe" />

                <div>
                    <label asp-for="Input.TwoFactorCode" class="block text-sm font-medium text-neutral-700">
                        Verification code
                    </label>
                    <input asp-for="Input.TwoFactorCode"
                           autocomplete="one-time-code"
                           inputmode="numeric"
                           maxlength="10"
                           class="mt-2 w-full border-0 border-b border-neutral-300 focus:border-neutral-900 focus:ring-0 py-2 tracking-widest placeholder-neutral-400"
                           placeholder="Enter code" />
                    <span asp-validation-for="Input.TwoFactorCode" class="text-red-600 text-sm"></span>
                </div>

                <div class="flex items-center justify-between text-xs text-neutral-500">
                    <label class="inline-flex items-center gap-2 cursor-pointer">
                        <input asp-for="Input.RememberMachine" class="accent-neutral-900" />
                        <span>Remember this machine</span>
                    </label>

                    @* Only show resend when Email provider is available *@
                    @if (Model.UseEmail)
                    {
                        <button form="resend-form" class="text-neutral-600 hover:underline" type="submit">
                            Resend code
                        </button>
                    }
                </div>

                <button type="submit" class="w-full h-12 rounded-full bg-neutral-900 text-white font-medium hover:bg-neutral-800 transition">
                    Verify & Continue
                </button>
            </form>

            <form id="resend-form" method="post" asp-page-handler="Resend" class="hidden">
                <input type="hidden" name="rememberMe" value="@Model.RememberMe" />
                <input type="hidden" name="returnUrl" value="@Model.ReturnUrl" />
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}