@page
@model RealEstateCRM.Areas.Identity.Pages.Account.LoginWith2faModel
@{
    Layout = "/Views/Shared/_AuthLayout.cshtml";
    ViewData["Title"] = "Two-factor authentication";
}

<div class="min-h-screen flex items-center justify-center px-4">
    <div class="w-full max-w-4xl grid grid-cols-1 md:grid-cols-2 rounded-3xl overflow-hidden shadow-lg bg-white">
        <!-- Illustration -->
        <div class="bg-[#e9e9eb] hidden md:flex items-center justify-center p-8">
            <img src="~/assets/images/Homey_transparent.png" asp-append-version="true" alt="Homey" class="w-full max-w-md h-auto object-contain" />
        </div>

        <!-- 2FA Panel -->
        <div class="bg-white p-8 md:p-12">
            <h1 class="text-2xl md:text-3xl font-semibold text-neutral-900 text-center">Two-factor authentication</h1>
            <p class="text-center text-sm text-neutral-500 mt-2">Enter the 6-digit code from your authenticator app.</p>

            <form method="post" class="mt-10 space-y-6">
                <div asp-validation-summary="ModelOnly" class="text-red-600" role="alert"></div>

                <input type="hidden" asp-for="ReturnUrl" value="@Model.ReturnUrl" />
                <input type="hidden" name="rememberMe" value="@Model.RememberMe" />

                <div>
                    <label asp-for="Input.TwoFactorCode" class="block text-sm font-medium text-neutral-700">Authenticator code</label>
                    <input asp-for="Input.TwoFactorCode" autocomplete="one-time-code" inputmode="numeric" maxlength="6"
                           class="mt-2 w-full border-0 border-b border-neutral-300 focus:border-neutral-900 focus:ring-0 py-2 tracking-widest placeholder-neutral-400"
                           placeholder="123 456" />
                    <span asp-validation-for="Input.TwoFactorCode" class="text-red-600 text-sm"></span>
                </div>

                <div class="flex items-center justify-between text-xs text-neutral-500">
                    <label class="inline-flex items-center gap-2 cursor-pointer">
                        <input asp-for="Input.RememberMachine" class="accent-neutral-900" />
                        <span>Remember this machine</span>
                    </label>
                    <a asp-page="./LoginWithRecoveryCode" class="hover:underline">Use a recovery code</a>
                </div>

                <button type="submit" class="w-full h-12 rounded-full bg-neutral-900 text-white font-medium hover:bg-neutral-800 transition">
                    Log in
                </button>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}

