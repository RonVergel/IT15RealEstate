@page
@model RegisterModel
@{
    Layout = "/Views/Shared/_AuthLayout.cshtml";
    ViewData["Title"] = "Create Agent Account";
}

<link rel="stylesheet" href="~/css/output.css" asp-append-version="true" />

<div class="min-h-screen flex items-center justify-center px-4">
    <div class="w-full max-w-6xl grid grid-cols-1 md:grid-cols-2 rounded-3xl overflow-hidden shadow-lg bg-white">
        <!-- Illustration side -->
        <div class="bg-[#e9e9eb] flex items-center justify-center p-8">
            <img src="~/assets/images/Homey_transparent.png"
                 asp-append-version="true"
                 alt="Homey illustration"
                 class="w-full max-w-xl h-auto object-contain" />
        </div>

        <!-- Auth panel -->
        <div class="bg-white p-8 md:p-12">
            <h1 class="text-3xl md:text-[28px] font-semibold text-center text-neutral-900">Create Agent Account</h1>
            <p class="text-center text-sm text-neutral-500 mt-2">Only admins can create agent accounts</p>

            <form id="registerForm" asp-route-returnUrl="@Model.ReturnUrl" method="post" class="mt-10 space-y-6">
                <div asp-validation-summary="ModelOnly" class="text-danger mb-4" role="alert"></div>
                
                <div>
                    <label asp-for="Input.UserName" class="block text-sm font-medium text-neutral-700">Username</label>
                    <input asp-for="Input.UserName"
                           class="mt-2 w-full border-0 border-b border-neutral-300 focus:border-neutral-900 focus:ring-0 py-2 placeholder-neutral-400"
                           autocomplete="username"
                           aria-required="true"
                           placeholder="desired-username" />
                    <span asp-validation-for="Input.UserName" class="text-danger text-sm"></span>
                </div>

                <div>
                    <label asp-for="Input.Email" class="block text-sm font-medium text-neutral-700">Email</label>
                    <input asp-for="Input.Email" 
                           class="mt-2 w-full border-0 border-b border-neutral-300 focus:border-neutral-900 focus:ring-0 py-2 placeholder-neutral-400"
                           autocomplete="email" 
                           aria-required="true" 
                           placeholder="agent@example.com" />
                    <span asp-validation-for="Input.Email" class="text-danger text-sm"></span>
                </div>

                <div>
                    <label asp-for="Input.Password" class="block text-sm font-medium text-neutral-700">Password</label>
                    <div class="relative mt-2">
                        <input asp-for="Input.Password" 
                               type="password" 
                               id="password"
                               class="w-full border-0 border-b border-neutral-300 focus:border-neutral-900 focus:ring-0 py-2 pr-10 placeholder-neutral-400"
                               autocomplete="new-password" 
                               aria-required="true" 
                               placeholder="••••••••" />
                        <button type="button" id="togglePassword"
                                class="absolute inset-y-0 right-0 flex items-center text-neutral-500 hover:text-neutral-700"
                                aria-label="Toggle password visibility">
                            <svg id="eyeIcon" xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" viewBox="0 0 24 24" fill="none" stroke="currentColor">
                                <path d="M2 12s3.5-7 10-7 10 7 10 7-3.5 7-10 7-10-7-10-7z" stroke-width="2"/>
                                <circle cx="12" cy="12" r="3" stroke-width="2"/>
                            </svg>
                        </button>
                    </div>
                    <span asp-validation-for="Input.Password" class="text-danger text-sm"></span>
                </div>

                <button id="registerSubmit" type="submit"
                        class="w-full h-12 rounded-full bg-neutral-900 text-white font-medium hover:bg-neutral-800 transition">
                    Create Agent Account
                </button>

                <div class="mt-6 space-y-2 text-center text-sm text-neutral-500">
                    <p>
                        This page is restricted to administrators.
                    </p>
                </div>
            </form>

            @if ((Model.ExternalLogins?.Count ?? 0) > 0)
            {
                <div class="mt-8">
                    <div class="relative">
                        <div class="absolute inset-0 flex items-center">
                            <div class="w-full border-t border-gray-300"></div>
                        </div>
                        <div class="relative flex justify-center text-sm">
                            <span class="px-2 bg-white text-gray-500">Or continue with</span>
                        </div>
                    </div>

                    <form id="external-account" asp-page="./ExternalLogin" asp-route-returnUrl="@Model.ReturnUrl" method="post" class="mt-6">
                        <div class="space-y-3">
                            @foreach (var provider in Model.ExternalLogins!)
                            {
                                <button type="submit" 
                                        class="w-full flex justify-center py-2 px-4 border border-gray-300 rounded-md shadow-sm text-sm font-medium text-gray-700 bg-white hover:bg-gray-50 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-neutral-500" 
                                        name="provider" 
                                        value="@provider.Name" 
                                        title="Register using your @provider.DisplayName account">
                                    @provider.DisplayName
                                </button>
                            }
                        </div>
                    </form>
                </div>
            }
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    <script>
        // Password show/hide functionality
        (function () {
            // Password field
            const pwd = document.getElementById('password');
            const toggle = document.getElementById('togglePassword');
            const icon = document.getElementById('eyeIcon');
            
            if (pwd && toggle && icon) {
                toggle.addEventListener('click', function () {
                    const show = pwd.type === 'password';
                    pwd.type = show ? 'text' : 'password';
                    icon.innerHTML = show
                        ? '<path d="M1 12s4-8 11-8 11 8 11 8-4 8-11 8S1 12 1 12z" stroke-width="2"/><path d="M4 4l16 16" stroke-width="2"/>'
                        : '<path d="M2 12s3.5-7 10-7 10 7 10 7-3.5 7-10 7-10-7-10-7z" stroke-width="2"/><circle cx="12" cy="12" r="3" stroke-width="2"/>';
                });
            }
        })();
    </script>
}
