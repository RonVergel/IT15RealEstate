@page
@model RealEstateCRM.Areas.Identity.Pages.Account.LoginWithRecoveryCodeModel
@{
    Layout = "/Views/Shared/_AuthLayout.cshtml";
    ViewData["Title"] = "Recovery code";
}

<div class="min-h-screen flex items-center justify-center px-4">
    <div class="w-full max-w-3xl grid grid-cols-1 md:grid-cols-2 rounded-3xl overflow-hidden shadow-lg bg-white">
        <div class="bg-[#e9e9eb] hidden md:flex items-center justify-center p-8">
            <img src="~/assets/images/Homey_transparent.png" asp-append-version="true" alt="Homey" class="w-full max-w-md h-auto object-contain" />
        </div>
        <div class="bg-white p-8 md:p-12">
            <h1 class="text-2xl md:text-3xl font-semibold text-neutral-900 text-center">Use a recovery code</h1>
            <p class="text-center text-sm text-neutral-500 mt-2">Enter one of your unused recovery codes.</p>

            <form method="post" class="mt-10 space-y-6">
                <div asp-validation-summary="ModelOnly" class="text-red-600" role="alert"></div>
                <div>
                    <label asp-for="Input.RecoveryCode" class="block text-sm font-medium text-neutral-700">Recovery code</label>
                    <input asp-for="Input.RecoveryCode" class="mt-2 w-full border-0 border-b border-neutral-300 focus:border-neutral-900 focus:ring-0 py-2" placeholder="eg. ABCDEF-123456" />
                    <span asp-validation-for="Input.RecoveryCode" class="text-red-600 text-sm"></span>
                </div>
                <button type="submit" class="w-full h-12 rounded-full bg-neutral-900 text-white font-medium hover:bg-neutral-800 transition">Log in</button>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}

